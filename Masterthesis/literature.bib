@article{Bai2016,
abstract = {Based on the Dirac–Bogoliubov–de Gennes equation, the chirality-resolved transport properties through a ballistic graphene-based superconducting heterojunction with both the Rashba and the Dresselhaus spin orbit interaction have been investigated. Our results show that, in contrast to the retro-Andreev reflection suppressed by the spin orbit interaction (SOI), the specular Andreev reflection (SAR) can be enhanced largely by the SOI. Moreover, the Fabry–Perot interferences in the barrier region lead to the oscillating feature of the tunneling conductance. It is anticipated to apply the qualitative different results to diagnose the SAR in single layer graphene in the presence of both kinds of the SOI.},
author = {Bai, Chunxu and Yang, Yanling},
doi = {10.1016/J.PHYSLETA.2016.07.004},
issn = {0375-9601},
journal = {Physics Letters A},
month = {aug},
number = {37},
pages = {2947--2952},
publisher = {North-Holland},
title = {{Specular Andreev reflection in graphene-based superconducting junction with substate-induced spin orbit interaction}},
url = {https://www.sciencedirect.com/science/article/pii/S0375960116303991},
volume = {380},
year = {2016}
}
