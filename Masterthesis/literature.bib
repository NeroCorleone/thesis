@article{Efetov2016,
abstract = {Ongoing experimental progress in the preparation of ultra-clean graphene/superconductor (SC) interfaces enabled the recent observation of specular interband Andreev reflections (AR) at bilayer graphene (BLG)/NbSe{\$}{\_}{\{}2{\}}{\$} van der Waals interfaces [Nature Physics 12, (2016)]. Motivated by this experiment we theoretically study the differential conductance across a BLG/SC interface at the continuous transition from high to ultra-low Fermi energies {\$}E{\_}{\{}F{\}}{\$} in BLG. Using the Bogoliubov-deGennes equations and the Blonder-Tinkham-Klapwijk formalism we derive analytical expressions for the differential conductance across the BLG/SC interface. We find a characteristic signature of the cross-over from intra-band retro- (high {\$}E{\_}{\{}F{\}}{\$}) to inter-band specular (low {\$}E{\_}{\{}F{\}}{\$}) ARs, that manifests itself in a strongly suppressed interfacial conductance when the excitation energy {\$}|\backslashvarepsilon |=|E{\_}{\{}F{\}}|{\textless}\backslashDelta {\$} (the SC gap). The sharpness of these conductance dips is strongly dependent on the size of the potential step at the BLG/SC interface {\$}U{\_}{\{}0{\}}{\$}.},
archivePrefix = {arXiv},
arxivId = {1605.04254},
author = {Efetov, Dmitri K. and Efetov, Konstantin B.},
doi = {10.1103/PhysRevB.94.075403},
eprint = {1605.04254},
file = {:home/nefta/Downloads/110588(1).pdf:pdf},
issn = {24699969},
journal = {Physical Review B},
number = {7},
title = {{Crossover from retro to specular Andreev reflections in bilayer graphene}},
volume = {94},
year = {2016}
}
